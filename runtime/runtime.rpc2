      containers:
      - args:
        - |
          exec
          /opt/besu/bin/besu \
            --config-file=/etc/besu/config.toml \
            --Xdns-enabled=true --Xdns-update-enabled=true --Xnat-kube-service-name=besu-node-rpc-2 \
            --min-gas-price=0 \
            --tx-pool-min-gas-price=0 \
